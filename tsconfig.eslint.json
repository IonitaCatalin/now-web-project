{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "allowJs": true,
      "module": "commonjs",
      "types": [
        "jest",
        "node"
      ],
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "lib": [
        "dom",
        "es2018"
      ]
    },
    "exclude": [
      "**/node_modules",
      "**/dist",
      "tmp"
    ],
    "include": [
      "**/*.ts",
      "**/*.js",
      "**/*.spec.ts"
    ]
  }
  